<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/custom_recycler">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff"
            android:src="@drawable/cocktail"
            android:layout_width="50dp"
            android:layout_height="60dp"
            tools:ignore="VectorDrawableCompat"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="번호정보"
                    android:id="@+id/textView_list_pnum"
                    android:fontFamily="@font/font_hangeul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="방정보"
                    android:fontFamily="@font/font_hangeul"
                    android:id="@+id/textView_list_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="시간정보"
                    android:fontFamily="@font/font_hangeul"
                    android:id="@+id/textView_list_time"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="음료정보"
                    android:fontFamily="@font/font_hangeul"
                    android:id="@+id/textView_list_drink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>